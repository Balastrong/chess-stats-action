{
  "name": "chess-stats-action",
  "version": "0.0.1",
  "private": true,
  "description": "Automatically update your README.md with Chess.com games and stats - fully customizable",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-check": "eslint --fix-dry-run src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test-rebuild": "npm run build && npm run test",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "debug": "npx ts-node ./src/main.ts INPUT_IS_DEBUG='true' INPUT_FILE_NAME='README-DEMO.md' INPUT_CHESS_USERNAME='hikaru' INPUT_SHOW_DATE='true'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Balastrong/chess-stats-action.git"
  },
  "keywords": [
    "actions",
    "readme",
    "chess"
  ],
  "author": "Leonardo Montini",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "iswitch": "^0.0.3"
  },
  "devDependencies": {
    "@types/node": "^16.10.5",
    "@typescript-eslint/parser": "^5.8.1",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.3.2",
    "husky": "^8.0.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.4"
  }
}
